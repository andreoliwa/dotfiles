#!/usr/bin/env bash
# Show Python versions and virtual envs
set -e

_BOLD_ON='\e[1m'
_BOLD_OFF='\e[m'

function show {
    echo -e "${_BOLD_ON}$1 = ${_BOLD_OFF}$2"
}

show 'pyenv version' "$(pyenv version)"
show VIRTUAL_ENV "$VIRTUAL_ENV"
show Poetry "$(poetry -V)"
show 'which python' "$(pyenv which python)"
show Python "$(python -V)"
